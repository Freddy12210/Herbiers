{% extends 'base.html.twig' %}

{% block title %}Liste des Lieux{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des Lieux</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Libellé</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieux %}
                <tr>
                    <td>{{ lieu.libelle }}</td>
                    <td>
                        <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('lieu/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun lieu trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_lieu_new') }}" class="btn btn-success">Ajouter un Lieu</a>
        <a href="{{ path('app_releves_index') }}" class="btn btn-secondary">Retourner aux Relevés</a>
    </div>
{% endblock %}
